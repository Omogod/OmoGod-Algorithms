
function solution(str){
  let final = [];
   spStr = str.split('');
  
  // console.log(spStr.length)
  
  for ( let i = 0; i < spStr.length; i += 2) {
    if ( spStr[i + 1] === undefined) {
      // console.log(spStr[4 + 1])
      
      final.push(spStr[i] + '_')
    } 
    else {
      final.push(spStr[i] + spStr[i + 1])
  }
  
}
  return final;
}